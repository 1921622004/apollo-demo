{
    "compilerOptions": {
        "module": "esnext",
        "noImplicitAny": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "removeComments": true,
        "target": "es2015",
        "jsx": "preserve",
        "lib": [
            "dom",
            "es6"
        ],
        "types":[
            "react",
            "node",
            "react-dom",
            "react-router-dom"
        ]
    },
    "include": [
        "src/**/*",
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist/**/*"
    ]
}